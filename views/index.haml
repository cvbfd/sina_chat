      %a.brand{:href => '/'}
        sina_chat
      .nav-collapse

.row-fluid
  .span4
    %form{:method => "GET", :action => '/room'}
      %input{:type => "hidden", :name => "_method", :value => "GET"}
      - if @error_msg
        .control-group.error
          %label ユーザー名
          .controls
            %input{:type => 'text', :name => 'name', :placeholder => 'input your name...'}
            %span.help-inline #{@error_msg}
      - else
        .control-group
          %label ユーザー名
          .controls
            %input{:type => 'text', :name => 'name', :placeholder => 'input your name...'}
      .control-group
        .controls
          %input.btn{:type => 'submit', :value => 'ログイン'}
